@model FoodDelivery.Domain.Entities.ShippingDetails

@{
	ViewBag.Title = "Оформление заказа";
}

<h2>Оформление заказа</h2>
<p>Пожалуйста введи ваши контактные данные, и курьер отправится в путь!</p>


@using (Html.BeginForm())
{
	@Html.ValidationSummary();
	<div class="form-group">
		<label>Ваше имя:</label>
		@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
	</div>

	<div class="form-group">
		<label>Номер телефона:</label>
		@Html.TextBoxFor(x => x.Number, new { @class = "form-control" })
	</div>
	<div class="form-group">
		<label>Адрес:</label>
		@Html.TextBoxFor(x => x.City, new { @class = "form-control" })
	</div>
	<h3>Опции</h3>
	<div class="checkbox">
		<label>
			@Html.EditorFor(x => x.GiftWrap)
			Оплата картой?
		</label>
	</div>

	<div class="text-center">
		<input class="btn btn-primary" type="submit" value="Обработать заказ" />
	</div>
}
