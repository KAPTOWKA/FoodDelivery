@model FoodDelivery.Models.LoginModel

@{
	ViewBag.Title = "FoodDelivery: Вход";
}

@using (Html.BeginForm())
{
	<div class="form-horizontal col-lg-12 col-md-pull-2" style="color:black">
		<h2 class="text-center">Вход</h2>
		<p class="text-center">Пожалуйста, заполните поля</p>

		<div class="form-group">
			<div class="col-md-offset-4 col-md-5">
				@Html.AntiForgeryToken()
				@Html.ValidationSummary()
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(x => x.Email, htmlAttributes: new { @class = "control-label col-md-4" })
			<div class="col-md-5">
				@Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @id = "loginEmail" } })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "control-label col-md-4" })
			<div class="col-md-5">
				@Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @id = "loginPass" } })
			</div>
		</div>


		<div class="form-horizontal col-lg-6 col-md-push-5">
			<input type="submit" class="btn btn-primary" value="Войти" />


			@Html.ActionLink("Регистрация", "Register", null, new { @class = "btn btn-link" })
		</div>
	</div>
}



